<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Sign Up</title>
    <style>
        .form-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .address {
            display: flex;
            gap: 15px;
        }

        .form-label {
            font-weight: 500;
        }

        .btn-primary {
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="form-container">
            <h3 class="text-center mb-4">Sign Up As User</h3>

            <form action="/user/signup" method="POST">
                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" id="email" placeholder="Enter Email" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Enter Password" required>
                </div>

                <!-- Contact Number -->
                <div class="mb-3">
                    <label for="contactNumber" class="form-label">Contact Number</label>
                    <input name="contactNumber" type="tel" class="form-control" id="contactNumber" placeholder="Enter Contact Number" required>
                </div>

                <!-- Address -->
                <div class="address mb-3">
                    <div class="flex-fill">
                        <label for="street" class="form-label">Street</label>
                        <input name="address[street]" type="text" class="form-control" id="street" placeholder="Enter Street" required>
                    </div>
                    <div class="flex-fill">
                        <label for="city" class="form-label">City</label>
                        <input name="address[city]" type="text" class="form-control" id="city" placeholder="Enter City" required>
                    </div>
                    <div class="flex-fill">
                        <label for="state" class="form-label">State</label>
                        <input name="address[state]" type="text" class="form-control" id="state" placeholder="Enter State" required>
                    </div>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
