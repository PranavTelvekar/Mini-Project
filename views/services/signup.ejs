<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Sign Up</title>
    <style>
        .form-container {
            max-width: 700px;
            margin: 50px auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-header {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-primary {
            width: 100%;
            padding: 10px;
        }

        .Dropdown, .address, .validation {
            display: flex;
            gap: 15px;
        }

        @media (max-width: 768px) {
            .Dropdown, .address, .validation {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="form-container">
            <h3 class="form-header">Sign Up as Service Provider</h3>

            <form action="/services/signup" method="POST">
                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" type="text" class="form-control" id="username" placeholder="Enter Username" required>
                </div>

                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" type="email" class="form-control" id="email" placeholder="Enter Email" required>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" type="password" class="form-control" id="password" placeholder="Enter Password" required>
                </div>

                <!-- Contact & Service Category -->
                <div class="Dropdown">
                    <!-- Contact Number -->
                    <div class="mb-3 flex-grow-1">
                        <label for="contactNumber" class="form-label">Contact Number</label>
                        <input name="contactNumber" type="number" class="form-control" id="contactNumber" placeholder="Enter Contact Number" required>
                    </div>

                    <!-- Service Category -->
                    <div class="mb-3 flex-grow-1">
                        <label for="dropdown" class="form-label">Service Category</label>
                        <select name="serviceCategory" id="dropdown" class="form-select" aria-label="Default select example" required>
                            <option selected disabled>Select Category</option>
                            <option value="Plumber">Plumber</option>
                            <option value="Electrician">Electrician</option>
                            <option value="Painter">Painter</option>
                            <option value="Nursing Home">Nursing Home</option>
                            <option value="Beauty">Beauty</option>
                        </select>
                    </div>
                </div>

                <!-- Address: City & State -->
                <div class="address">
                    <div class="mb-3 flex-grow-1">
                        <label for="city" class="form-label">City</label>
                        <input name="serviceArea[city]" type="text" class="form-control" id="city" placeholder="Enter City" required>
                    </div>
                    <div class="mb-3 flex-grow-1">
                        <label for="state" class="form-label">State</label>
                        <input name="serviceArea[state]" type="text" class="form-control" id="state" placeholder="Enter State" required>
                    </div>
                </div>

                <!-- Aadhar & License -->
                <div class="validation">
                    <div class="mb-3 flex-grow-1">
                        <label for="adharCardNumber" class="form-label">Aadhar Number</label>
                        <input name="adharCardNumber" type="number" class="form-control" id="adharCardNumber" placeholder="Enter Aadhar Number" required>
                    </div>

                    <div class="mb-3 flex-grow-1">
                        <label for="licenseNumber" class="form-label">License Number</label>
                        <input name="LicineNumber" type="text" class="form-control" id="licenseNumber" placeholder="Enter License Number" required>
                    </div>
                </div>

                <!-- Years of Experience -->
                <div class="mb-3">
                    <label for="experience" class="form-label">Years of Experience</label>
                    <input name="experience" type="number" class="form-control" id="experience" placeholder="Enter Years of Experience" required>
                </div>

                <!-- Work Description -->
                <div class="form-floating mb-4">
                    <textarea name="workDescription" class="form-control" placeholder="Leave Work Description" id="workDescription" style="height: 100px" required></textarea>
                    <label for="workDescription">Work Description</label>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
