<body>
    <nav style="display: flex;width: 100%;justify-content: space-around;">

        <% if(!currentUser){ %>
            <a href="/services/signup"><h4>SignUp As ServiceProvider</h4></a>
            <a href="/services/login"><h4>Login As ServiceProvider</h4></a>
            <a href="/user/signup"><h4>SignUp (User) </h4></a>
            <a href="/user/login"><h4>Login (User)</h4></a>
        <% }else{ %>
            <a href="/logout">Log Out</a>
        <% } %>
        
    </nav>
    <% if(success){ %>
        <h1><%= success %></h1>
    <% } %>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1z" >
        <%for(let service of services){%>
            <div class="profile-card card" style="width:20rem;margin-top: 2rem;margin: 2rem;" >
                <img src="https://images.unsplash.com/photo-1552733407-5d5c46c3bb3b?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTB8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60" style="height: 12rem;" class="card" alt="[profile]">
                <div class="card-body" >
                  <h5 class="card-title"><%= service.serviceCategory %></h5>
                    <p class="card-text">
                        <%= service.username %> <br>
                        <%= service.serviceArea.city %>,<%= service.serviceArea.state %>
                    </p>
                  <a href="/services/<%= service._id %>" class="btn btn-primary">See Profile</a>
                </div>
            </div>
        <%}%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>